<body>
<div class="container mt-5">
    <h1>{{ user.username }}'s Profile</h1>
    <h2>Your Posts:</h2>

    <ul class="list-group mt-3">
        {{#each user.posts}}
            <li class="list-group-item">
                <div class="d-flex justify-content-between">
                    <h4>{{ this.title }}</h4>
                </div>
                <p>{{ this.content }}</p>
            </li>
        {{/each}}
    </ul>
</div>

<script src="/js/profile.js"></script>

</body>
